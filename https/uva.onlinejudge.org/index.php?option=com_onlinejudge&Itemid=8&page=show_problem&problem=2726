
/* -- I Can  &  I Will -- */

#include <iostream>
#include <string>
#include <algorithm>
#include <cmath>
#include <sstream>
#include <set>
#include <map>
#include <queue>
#include <deque>
#include <stack>
#include <vector>
#include <iomanip>
using namespace std;

int main()
{
	std::ios_base::sync_with_stdio(0);
	cin.tie(NULL);
	cout.tie(NULL);

	int n, m;

	while (cin >> n >> m && n&&m)
	{
		int l,r,a, arr[100];
		bool x = 1;
		for (int i = 1; i <= n; i++)
			cin >> arr[i];

		while (m--)
		{
			cin >> l >> r >> a;
			arr[l] -= a;
			arr[r] += a;
		}

		for (int i = 1; i <= n; i++)
		{
			if (arr[i] < 0)
			{
				x = 0;
				break;
			}
		}

		if (x)
			cout << "S" << "\n";
		else
			cout << "N" << "\n";

	}



	//system("pause");
	return 0;
}
