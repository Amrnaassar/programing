#include <iostream>
#include <algorithm>
#include <cmath>
#include <string>
using namespace std;

int main()
{
	int n;
	while (cin >> n)
	{
		if (n == 0)
			break;

		string s;
		int d=-1,r=-1, mn = 100000000;

		cin >> s;

		for (int i = 0; i < s.size(); i++)
		{
			if (s[i] == 'Z')
			{
				mn = 0;
				break;
			}

			if (s[i] == 'R')
			{
				
				r = i;

				if (d!=-1)
					mn = min(mn, abs(d - r));
			}

			if (s[i] == 'D')
			{
				
				d = i;
				if (r!=-1)
					mn = min(mn, abs(d - r));
				
			}

		}

		cout << mn << endl;
	}
	
	//system("pause");
}
