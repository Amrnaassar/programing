
/*_*  I Can  &  I Will  * _ */

#include <iostream>
#include <string>
#include <algorithm>
#include <cmath>
#include <sstream>
#include <set>
#include <bitset>
#include <map>
#include <queue>
#include <math.h>
#include <deque>
#include <stack>
#include <vector>
#include <iomanip>
typedef long long ll;
using namespace std;
void NasSaR()
{
	std::ios_base::sync_with_stdio(0);
	cin.tie(NULL);
	cout.tie(NULL);
}


int main()
{
	NasSaR();

	ll n, p;
	cin >> n >> p;
	vector<ll>v(n);
	for (int i = 0; i < n; i++)
	{
		cin >> v[i];
	}

	ll ans1=0, ans2=0, l = 1, r = n, mid;

	while (l <= r)
	{
		mid = (l + r) / 2;
		multiset<ll>s;
		multiset<ll>::iterator it ;

		for (int i = 0; i <n; i++)
		{
			s.insert(v[i] + (i + 1)*mid);
		}
		ll sum = 0,a=mid;
		for (it = s.begin(); it != s.end()&&a--; it++)
			sum += *it;
		
		if (sum <= p)
		{
			l = mid + 1;
			ans1 = mid;
			ans2 = sum;
		}
		else
			r = mid - 1;
	}

	cout << ans1 << " " << ans2 << "\n";
	//system("pause");
	return 0;
}
