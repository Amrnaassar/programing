
/** -- **  I Can  &  I Will  ** -- **/

#include <iostream>
#include <string>
#include <algorithm>
#include <cmath>
#include <sstream>
#include <set>
#include <bitset>
#include <map>
#include <queue>
#include <deque>
#include <stack>
#include <vector>
#include <iomanip>
using namespace std;
void NasSaR()
{
	std::ios_base::sync_with_stdio(0);
	cin.tie(NULL);
	cout.tie(NULL);
}

bool ans(long long x,long long k,long long n)
{
	long long sum = 0,f=x,p=1;
	
	while (f  && sum < n)
	{
		sum += f;
		f = x / (pow(k, p));
		p++;

	}
	if (sum >= n)
		return 1;
	else
		return 0;
}

int main()
{
	NasSaR();

	long long n, k,mid;

	cin >> n >> k;

	long long  l = 0, r = n,a=0;



	while (l <= r)
	{
		mid = (l + r) / 2;
		
		if (ans(mid, k,n))
		{
			a = mid;
			r = mid - 1;
		}
		else
			l = mid+1;
			
	}
	
	cout << a <<"\n";
	//system("pause");
	return 0;
}
