#include <iostream>
#include <algorithm>
#include <cmath>
#include <string>
using namespace std;

int main()
{
	int n, x, arr[100], r, l, c = 0;
	cin >> n >> x;
	for (int i = 0; i < n; i++)
		cin >> arr[i];

	x--;
	r = x; l = x;
	while (true)
	{
		l--; r++;
		if (l < 0 || r >= n)
			break;

		if (arr[l] == 1 && arr[r] == 1)
			c+=2;
	}

	for (int i = r; i < n; i++)
	{
		if (arr[i] == 1)
			c++;
	}
	for (int i = l; i >= 0; i--)
	{
		if (arr[i] == 1)
			c++;
	}

	if (arr[x] == 1)
		c++;

	cout << c << endl;
	//system("pause");
}
