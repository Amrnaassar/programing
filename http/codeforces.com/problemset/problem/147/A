#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main()
{
	string s;
	int c = 0;

	getline(cin, s);

	for (int i = 0; i < s.size(); i++)
	{
		
		if (s[i] == ' ')
		{
				char h ;
			while (true)
			{
				if(s[i]!=' ')
				{
					h = s[i];
					
					break;
				}
				i++;
			}

			if (h != ',' && h != '.' &&h != '!' &&h != '?' )
				cout << " " ;
			i--;

		}
		else if ((s[i] == ','|| s[i]=='?' || s[i]=='.' || s[i]=='!' )&& s[i + 1] != ' ')
		{
			cout << s[i] << " ";
		}
		else
			cout << s[i];

	}


	cout << endl;
	//system("pause");
}
