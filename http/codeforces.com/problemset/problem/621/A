#include <iostream>
#include <string>
#include <algorithm>

using namespace std;

int main()
{
	long long x,sumeven = 0,sumodd=0,min=LLONG_MAX,c=0;
	int n;

	cin >> n;
	for (int i = 0; i < n; i++)
	{
		cin >> x;
		if (x % 2 != 0)
		{
			sumodd += x;
			c++;
			if (x < min)
				min = x;
		}
		else
		{
			sumeven += x;
		}
	
	}
	
	if (c % 2 != 0)
		sumodd -= min;
	cout << sumeven + sumodd << endl;

	
	//system("pause");
}
